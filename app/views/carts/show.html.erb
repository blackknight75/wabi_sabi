<h1>Your Cart</h1>
<div class="items">
<% @items.each do |item| %>
<div class="item-card">
<%= link_to item.title, item_path(item) %>
<%= item.description %><br>
Price:$<%= item.price %><br>
Quantity:<%= @cart.contents[item.id.to_s] %><br>
Subtotal: $<%= @cart.subtotal(item) %><br>
<%= form_tag cart_path(item_id: item.id), method: :patch do %>
  <%= number_field_tag "Quantity" %>
  <%= submit_tag "Update Quantity" %>
<% end %>
<%= button_to "Remove Item", cart_path(item_id: item.id), method: :delete %>
</div><br><br>
<% end %>
<p>Cart Total: $<%= @cart.total(@items) %> </p>
<div class="checkout">
  <%= button_to "checkout", new_order_path, method: :get if current_user%>
  <%= button_to "Login or Create Account to Checkout", signup_path, method: :get if !current_user%>
</div>
</div>
