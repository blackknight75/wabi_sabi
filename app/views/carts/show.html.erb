<h1>Your Cart</h1>
<div class="items">
<% @items.each do |item| %>
<div class="item-card">
<%= item.title %><br>
<%= item.description %><br>
<%= item.price %><br>
<p>Quantity:<%= @cart.contents[item.id.to_s] %></p><br>
<p>Subtotal:<%= @cart.subtotal(item) %></p><br>
<%= form_tag cart_path(item_id: item.id), method: :patch do %>
  <%= number_field_tag "Quantity" %>
  <%= submit_tag "Update Quantity" %>
<% end %>
<%= button_to "Remove Item", cart_path(item_id: item.id), method: :delete %>
</div><br><br>
<% end %>
<p>Cart Total: <%= @cart.total(@items) %> </p>
</div>
