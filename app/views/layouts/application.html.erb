<!DOCTYPE html>
<html>
<head>
  <title>WabiSabi</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <h1>わびさび Wabi-sabi</h1>

  <% flash.each do |type, msg| %>
    <%= content_tag :div, sanitize(msg), class: type %>
  <% end %>
  <p>Cart: <%= @cart.total_count %></p>
  <%= button_to "View Cart", cart_path(session[:cart]), method: :get %>
  <div class="navbar">
    <%= button_to "Login", login_path, method: :get unless current_user %>
    <%= button_to "Log Out", logout_path if current_user %>
  </div>
<%= yield %>

</body>
</html>
