<h1>Item Show Page</h1>
<div class="stock">
</div>
<div class="row">
  <div class="col s6 m6">
    <div class="card ">
      <div class="card-image ">
        <%= image_tag @item.image, height: '400', width: '400' %>
      </div>
      <div class="card-content">
        <h3><%= @item.title %></h3>
        <p>Price: <%= @item.price %></p>
        <p>Description: <%= @item.description %></p>
      </div>
      <div class="card-action">
        <%= button_to "Add to Cart", cart_path(item_id: @item.id) if @item.retired == false %>
        <%= button_to 'Item Retired', {}, :disabled => @item.retired == true if @item.retired == true%>
      </div>
    </div>
  </div>
</div>
