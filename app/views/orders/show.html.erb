<h1>Order Show Page</h1>

<h4>Order Date: <%= @order.created_at.strftime("%D at %l:%M%P") %></h4>
<h4>Order Status: <%= @order.order_status  %></h4>
<%= @order.user.full_name %><br>
<%= @order.user.address %><br>
<div>
  <table>
    <thead>
      <tr>
          <th data-field="name">Item Name</th>
          <th data-field="price">Item Price</th>
          <th data-field="quantity">Quantity</th>
          <th data-field="quantity">Subtotal</th>
      </tr>
    </thead>

    <tbody>
      <% @order.items.each_with_index do |item, index| %>
      <tr>
        <td><%= link_to item.title, item_path(item) %></td>
        <td><%= @order.item_prices[index] %>7</td>
        <td><%= @order.item_quantities[index] %></td>
        <td><%= @order.subtotal(index) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <h4 class="right">Order Total: <%= @order.order_total %></h4>
</div>
