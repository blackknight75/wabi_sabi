<div class='manage-orders'>
<h3>Manage Orders</h3>

  <div class="ordered">
    <h6><strong> Order Status "Ordered"</strong> Order Count: <%= @orders.ordered.count %></h6>
    <% @orders.ordered.each do |order| %>
      <%= link_to "Order#: #{order.id}", order_path(order) %> Order Date: <%= order.created_at.strftime("%D at %l:%M%P %Z") %>
    <% end %>
  </div>

  <div class="paid">
    <h6><strong> Order Status "Paid"</strong> Order Count: <%= @orders.paid.count %></h6>
    <% @orders.paid.each do |order| %>
      <%= link_to "Order#: #{order.id}", order_path(order) %> Order Date: <%= order.created_at.strftime("%D at %l:%M%P %Z") %>
    <% end %>

  </div>

  <div class="completed">
    <h6><strong> Order Status "Completed"</strong> Order Count: <%= @orders.completed.count %></h6>
    <% @orders.completed.each do |order| %>
      <%= link_to "Order#: #{order.id}", order_path(order) %> Order Date: <%= order.created_at.strftime("%D at %l:%M%P %Z") %>
    <% end %>

  </div>

  <div class="cancelled">
    <h6><strong> Order Status "Cancelled"</strong> Order Count: <%= @orders.cancelled.count %></h6>
    <% @orders.cancelled.each do |order| %>
      <%= link_to "Order#: #{order.id}", order_path(order) %> Order Date: <%= order.created_at.strftime("%D at %l:%M%P %Z") %>
    <% end %>

  </div>

  <br>
  <br>

</div>

