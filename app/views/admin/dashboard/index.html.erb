<h2>Admin Dashboard</h2>

<div class='item-management'>
  <h4>Manage Items</h4>
  <%= link_to 'View All Items', admin_items_path, class: "waves-effect waves-light light-blue darken-4 btn-large" %>
  <%= link_to "Add New Item to Inventory", new_admin_item_path, class: "waves-effect waves-light light-blue darken-4 btn-large"%>
</div>

<div class='manage-orders'>
  <h3>Manage Orders</h3>
  Order Count: <%= @orders.count %>

  <p><%= link_to "Ordered", admin_dashboard_path(order_status: "Ordered"), method: :post %> | <%= link_to "Paid", admin_dashboard_path(order_status: "Paid"), method: :post %> | <%= link_to "Completed", admin_dashboard_path(order_status: "Completed"), method: :post %> | <%= link_to "Cancelled", admin_dashboard_path(order_status: "Cancelled"), method: :post %></p>

  <% @orders.each do |order| %>
    <%= link_to "Order#: #{order.id}", order_path(order) %> Order Date: <%= order.created_at.strftime("%D at %l:%M%P %Z") %> <%= link_to "edit", edit_order_path(order) %>
    <br><br>
  <% end %>
</div>
