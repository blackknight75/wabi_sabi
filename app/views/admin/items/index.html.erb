<h1>Items</h1><br>
<%= button_to "Categories", categories_path, method: :get %>
<div class="items">
    <table>
      <tr>
        <th>Image</th>
        <th>Title</th>
        <th>Price</th>
        <th>Description</th>
        <th>Status</th>
        <th>Actions</th>
      </tr>
  <% @items.each do |item| %>
      <tr>
        <td><img src= "<%= item.image %>"height='75', width='75' alt='' class='circle responsive-img'></td>
        <td><%= link_to item.title, admin_item_path(item) %></td>
        <td><%= item.price %></td>
        <td><%= item.description %></td>
        <td><%= item.status %></td>
        <td><%= link_to "Edit", edit_admin_item_path(item) %></td>
      </tr>
    <% end %>
    </table>
</div>
