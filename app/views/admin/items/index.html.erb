<h1>Admin Items</h1>

<%= button_to "Categories", categories_path, method: :get %>
<div class="items">
  <div class="row">
  <% @items.each do |item| %>
    <div class="col s3 m3">
      <div class="card large">
        <div class="card-image">
        <%= image_tag item.image, height: '250', width: '250' %>
        </div>
        <div class="card-content">
          <h5><%= item.title %></h5>
          <p>Price: <%= item.price %></p>
          <br>
          <p>Description: <%= item.description %></p>
          </div>
          <div class="card-action">
            <%= link_to "Add to Cart", cart_path(item_id: item.id), method: :post %>
            <%= link_to "Edit Item", edit_admin_item_path(item) %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
