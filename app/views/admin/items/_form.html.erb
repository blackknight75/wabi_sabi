<%= form_for @item, url:{:controller=>'admin/items', :action=>'create'} do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.label :price %>
  <%= f.text_field :price %>
  <%= f.label :image %>
  <%= f.text_field :image %>
  <%= f.collection_check_boxes :category_ids, @categories, :id, :name do |m| %>
  <%= m.check_box %> <%= m.label %>
<% end %>
  <br>
  <br>
  <%= f.submit "Add Item to Inventory" %>
<% end %>
